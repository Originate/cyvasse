.form-title Sign In

= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  = f.inputs do
    = f.input :login, label: "Username or Email", :autofocus => true
    = f.input :password
    = f.input :remember_me

  = f.actions do
    = f.action :submit, label: "Sign in"
    = render "devise/shared/links"
