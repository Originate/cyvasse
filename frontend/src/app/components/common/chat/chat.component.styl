:host
  border-width 1px 1px 0px 1px
  border-style solid
  border-color rgba(0,0,0,0.12)
  display block
  background-color white

.body
  height 45vh
  display flex
  flex-direction column
  width 400px

.messages-list
  height calc(100% - 40px)
  border-bottom 1px solid black
  padding 2px
  overflow auto

  &.long
    height calc(100% - 20px)
    border-bottom 0

.title
  display flex
  justify-content space-between
  cursor pointer
  padding 2px
  height 20px
  width 60px

  &.open
    border-bottom 1px solid black
    width 400px
    justify-content flex-start

.user
  color black

  &.current-user
    color #0000FF

.input
  height 60px
  margin-top -20px
  overflow hidden
  padding 0 2px

  mat-form-field
    width calc(100% - 40px)

