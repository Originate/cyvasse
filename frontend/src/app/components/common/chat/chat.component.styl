:host
  border-width 1px 1px 0px 1px
  border-style solid
  border-color rgba(0,0,0,0.12)
  width 400px
  display block

.body
  height 45vh
  display flex
  flex-direction column

.messages-list
  height calc(100% - 40px)
  border-bottom 1px solid black
  padding 2px
  overflow auto

.title
  display flex
  justify-content space-between
  cursor pointer
  padding 2px
  height 20px

  &.open
    border-bottom 1px solid black

.user
  color black

  &.current-user
    color #0000FF

.input
  height 60px
  margin-top -20px
  overflow hidden
  padding 0 2px

  mat-form-field
    width calc(100% - 40px)

