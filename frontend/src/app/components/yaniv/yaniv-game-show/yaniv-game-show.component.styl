.wrapper
  height 100%
  width 100%
  display flex
  justify-content space-between

.left 
  height 100%
  width calc(100% - 300px)

  .table-container
    height 100%
    width 100%
    border 1px solid black
    box-sizing border-box

.right
  height 100%
  width 300px
  border 1px solid black
  box-sizing border-box
  padding 10px

  .players, .actions, .scoreboard
    margin-bottom 20px

  .scoreboard table
    width 100%